{
    "manifest_version": 2,
    "name": "Throw URL into Webhook",
    "version": "0.1",
    "description": "This extension sends the URL of the currently open page to Webhook",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "http://*/*", 
        "https://*/*"
    ],    
    "browser_action": {
        "default_title": "Throw URL into Webhook",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' https://hooks.slack.com; object-src 'self'"
}
